{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "types/*": ["src/types/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "exclude": [
    "./babel.config.js",
    "./jest.config.js",
    "./webpack.config.js"
  ]
}

