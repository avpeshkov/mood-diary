{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "screens/*": ["src/screens/*"],
      "modules/*": ["src/modules/*"],
      "utils/*": ["src/utils/*"],
      "src/*": ["src/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "exclude": [
    "./babel.config.js",
    "./jest.config.js",
    "./webpack.config.js"
  ]
}

