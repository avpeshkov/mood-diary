{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "types/*": ["src/types/*"],
      "api/*": ["src/api/*"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "services/*": ["src/services/*"],
      "helpers/*": ["src/helpers/*"],
      "rdx/*": ["src/rdx/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "exclude": [
    "./babel.config.js",
    "./jest.config.js",
    "./webpack.config.js"
  ]
}

